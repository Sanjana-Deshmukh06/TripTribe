<% layout("layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="card listings-card">
                    <div class="text-center"><br>
                        <h3>
                            <%= listing.title %>
                        </h3>
                    </div>
                    <div class="row-cols-xl-1 row-cols-lg-1 row-cols-md-1 row-cols-sm-1 row-cols-1">
                        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
                    </div><br>
                    <div class="card-body">
                        <ul>
                            <a> <i class="fa-solid fa-user"></i><b><i>
                                        Ownded By @<%= listing.owner.username %>
                                    </i></b></a>
                            <br><br>
                            <a><b> <%= listing.title %></b></a><br>
                            <a>
                                <%= listing.description %>
                            </a><br>
                            <a> &#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %></a><br>

                            <a> <i class="fa-solid fa-location-dot"></i>
                                <%= listing.location %>,
                                    <%= listing.country %>
                            </a>
                        </ul>
                        <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
                            <div class="btns">
                                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset">Edit</a>
                                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE"
                                    style="display:inline;">
                                    <button class="btn btn-outline-dark offset-2">Delete</button>
                                </form>
                            </div>
                            <% } %>
                    </div>
                    <hr>
                </div>
                <% if(currUser){ %>
                    <form method="post" action="/listings/<%= listing._id %>/reviews">
                        <div>
                            <h4>Reviews</h4>
                            <label for="rating">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>

                            <div class="card-body">
                                <label for="comment">Comment</label><br>
                                <textarea id="comment" name="review[comment]" rows="6" cols="70"></textarea><br>
                                <button class="btn btn-outline-dark">Submit</button>
                            </div>
                        </div>
                    </form>
                    <% } %>
                        <hr>
                        <% if(listing.reviews.length>0){ %>
                            <div class="row">
                                <p><b>ALL Reviews</b></p>
                                <% for (let review of listing.reviews) { %>
                                    <div class="card col-5 offset-1 mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= review.author.username %>
                                            </h5>
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated: 3 stars
                                            </p>
                                            <p class="card-text" required>
                                                <%= review.comment %>
                                            </p>
                                            <form method="POST"
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                <button class="btn btn-sm btn-dark mb-2">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                                <h5>Where you'll be</h5>
                                <div id="map" class="mb-2" style="width: 100%; height: 300px; border-radius: 1rem;">
                                </div>
            </div>
        </div>
    </body>
    <script>

        var map = tt.map({
            key: "Hp5IjwSBtG2TEtRY1OsCQeqhmOtqrhLK",
            container: "map",
            center: [73.8567, 18.5204],
            zoom: 10,
        })
    </script>